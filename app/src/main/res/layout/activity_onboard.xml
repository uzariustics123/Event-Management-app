<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_height="match_parent"
    android:transitionName="transOrg"
    android:background="@android:color/white"
    android:layout_width="match_parent">
  <androidx.coordinatorlayout.widget.CoordinatorLayout
      android:id="@+id/coordinator"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:theme="@style/Theme.AppCompat.Light"
        android:id="@id/appbar"
        android:background="@android:color/transparent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior"
        app:elevation="0.0dip">
      <FrameLayout
          android:padding="0dp"
          android:layout_margin="0dp"
          android:id="@+id/toolbarframe"
          android:orientation="horizontal"
          android:layout_height="wrap_content"
          android:layout_width="match_parent">
        <ImageButton
            android:id="@+id/menu_btn"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            app:tint="@color/grey_900"
            android:padding="10dp"
            android:layout_gravity="start|center_vertical"
            app:srcCompat="@drawable/outline_sort_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="end|center_vertical"
            >
          <androidx.cardview.widget.CardView
              android:id="@+id/carditem"
              android:layout_marginRight="5dp"
              android:layout_marginTop="10dp"
              android:layout_width="50dp"
              android:layout_height="50dp"
              app:cardCornerRadius="20dp"
              android:clickable="true"
              android:background="?android:attr/selectableItemBackgroundBorderless"
              app:cardElevation="0dp" >
          <ImageView
              android:foreground="?android:attr/selectableItemBackgroundBorderless"
              android:id="@+id/img_profile"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:scaleType="fitCenter"
              app:srcCompat="@drawable/avatar"/>
          </androidx.cardview.widget.CardView>
        </LinearLayout>
      </FrameLayout>

      <TextView
          android:textAppearance="@style/TextAppearance.AppCompat.Headline"
          android:textStyle="bold"
          android:textColor="@color/grey_900"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_mlarge"
          android:layout_marginRight="@dimen/spacing_mlarge"
          android:text="Raul C. Lito"
          />
      <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_mlarge"
        android:layout_marginRight="@dimen/spacing_mlarge"
          android:layout_marginBottom="@dimen/spacing_middle"
        android:text="raullito@gmail.com"
        />
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/tilsearch"
          android:layout_marginTop="@dimen/spacing_small"
          android:padding="0dp"
          app:startIconDrawable="@drawable/abc_ic_search_api_material"
          app:startIconTint="@color/grey_900"
          app:endIconTint="@color/grey_900"
          android:layout_gravity="center"
          app:hintEnabled="false"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          app:boxBackgroundMode="none"
          android:background="@android:color/transparent"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:singleLine="true"
            android:id="@+id/searchedtxt"
            android:background="@drawable/round_edittext_bg"
            android:padding="18dp"
            android:cursorVisible="false"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:hint="Search event"/>
      </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <!-- Your content below appbar right here -->
      <FrameLayout
          android:layout_height="match_parent"
          android:layout_width="match_parent"
          app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
          android:id="@+id/layout_swap">
      </FrameLayout>

  </androidx.coordinatorlayout.widget.CoordinatorLayout>
  <com.google.android.material.navigation.NavigationView
      android:id="@+id/navigation"
      android:layout_gravity="start"
      android:background="@color/backgroundColor"
      android:layout_height="match_parent"
      app:headerLayout="@layout/homedrawer_header"
      app:menu="@menu/menu_nav"
      app:itemIconTint="@color/grey_900"
      android:layout_width="230dp">
  </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>