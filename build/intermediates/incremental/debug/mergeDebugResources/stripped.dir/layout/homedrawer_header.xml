<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/drawerappbar"
        android:layout_width="match_parent"
        android:layout_marginBottom="3dp"
        app:elevation="1dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/backgroundColor"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior">
    <FrameLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="50dp"
        				app:cardElevation="0dp"
                        android:layout_gravity="left|center"
                        android:layout_width="@dimen/spacing_xmlarge"
                        android:layout_height="@dimen/spacing_xmlarge"
                        android:layout_marginLeft="18dp">
                        <ImageView
                            android:id="@+id/profpic"
                            android:transitionName="transPic"
                            app:srcCompat="@drawable/avatar"
                            android:layout_height="match_parent"
                       	 android:layout_width="match_parent"
                            />
                        </androidx.cardview.widget.CardView>
                          <LinearLayout
                              android:id="@+id/profdetaillayout"
                              android:background="?selectableItemBackground"
                              android:padding="0dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="left|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                        <TextView 
                        android:id="@+id/nametxtv"
                        android:transitionName="transName"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Name"
                        android:layout_marginLeft="@dimen/spacing_large"
                        android:layout_marginRight="@dimen/spacing_large"
                        android:textColor="@color/grey_900"
                        app:fontFamily="sans-serif-medium" />
                        <TextView
                            android:transitionName="transEmail"
                         android:id="@+id/email"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YourEmail@gmail.com"
                        android:layout_marginLeft="@dimen/spacing_large"
                        android:layout_marginRight="@dimen/spacing_large"
                        android:textColor="@color/colorPrimary"
                        app:fontFamily="sans-serif" />
                        </LinearLayout>
                          <ImageButton
                        android:id="@+id/btn_logout"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_height="?actionBarSize"
            			android:layout_width="?actionBarSize"
                        android:layout_gravity="right|center"
                        app:tint="@color/colorPrimary"
                        app:srcCompat="@drawable/ic_power_settings" />
                    </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>